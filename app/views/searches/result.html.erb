        <div class="col-5 mx-auto">
           <%= render 'searches/search' %>
        </div>

<h2>Results search for "<%= @word %>" </h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
     <thead>
         <tr>
           <th></th>
           <th>name</th>
           <th colspan="3"></th>
         </tr>
      </thead>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50,50) %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <thead>
         <tr>
           <th></th>
           <th>title</th>
           <th>opinion</th>
           <th colspan="3"></th>
         </tr>
      </thead>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(50,50) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>